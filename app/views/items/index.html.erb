<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th scope="col">Item title</th>
    <th scope="col">Description</th>
    <th scope="col">Action</th>
  </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.descr %></td>
          <td class="dropdown">
            <p class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Current action<span class="caret"></span></p>
            <ul class="dropdown-menu">
              <li><%= link_to 'Show', item %></li>
              <li><%= link_to 'Edit', edit_item_path(item) %></li>
              <li><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </td>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Item', new_item_path %>
